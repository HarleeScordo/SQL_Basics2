## Read Consistency 

SET TRANSACTION READ ONLY;


## UNDO

ALTER SYSTEM
SET UNDO_MANAGEMENT = MANUAL;

ALTER SYSTEM
SET UNDO_MANAGEMENT = MANUAL SCOPE = SPFILE;

SHOW PARAMETER UNDO_TABLESPACE;

ALTER SYSTEM SET UNDO_TABLESPACE = UNDO_BATCH;

SHOW PARAMETER UNDO_TABLESPACE;

SHOW PARAMETER UNDO;

SHOW PARAMETER UNDO_RETENTION;

ALTER SYSTEM
SET UNDO_RETENTION = 43200;

SHOW PARAMETER UNDO_RETENTION;

ALTER TABLESPACE UNDOTBS1 RETENTION GUARANTEE;

ALTER TABLESPACE UNDOTBS1 RETENTION NOGUARANTEE;

SELECT tablespace_name, contents, retention
FROM dba_tablespaces;

ALTER TABLESPACE USERS RETENTION GUARANTEE;



## Monitor and Resolve Locking Conflicts

LOCK TABLE employees, departments IN EXCLUSIVE MODE;

LOCK TABLE employees
IN EXCLUSIVE MODE
NOWAIT;

LOCK TABLE employees
IN SHARE ROW EXCLUSIVE MODE WAIT 60;

ALTER TABLE employees MODIFY salary number (15, 2);

SHOW PARAMETER ddl_lock;

